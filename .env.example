# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Application Settings
DATABASE_PATH=./data/analysis.db
LOG_LEVEL=INFO
MAX_PARALLEL_TASKS=5

# MCP Settings (Yahoo Finance)
# URL for the MCP server (e.g., via Obot)
MCP_URL=http://localhost:8080/mcp-connect/your-mcp-server-id
MCP_YFINANCE_ENABLED=true

# OAuth Settings (for MCP authentication with --oauth flag)
# These are used when running: python -m src.main batch --oauth
# You can use either the generic names or the GitHub-specific names below

# Generic OAuth settings
OAUTH_REDIRECT_URI=https://cbg-obot.com/
OAUTH_SCOPE=user repo
OAUTH_CLIENT_NAME=Stock Analysis MCP Agent

# GitHub OAuth specific settings (takes priority over generic if set)
# MCP_OAUTH_GITHUB_URL=https://cbg-obot.com/mcp-connect/your-github-mcp-server-id
# MCP_OAUTH_GITHUB_REDIRECT_URI=https://cbg-obot.com/
# MCP_OAUTH_GITHUB_SCOPE=user repo
